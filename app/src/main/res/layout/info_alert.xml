<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">


    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/title_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Book Title (Publication Year)"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="@id/thumbnail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/thumbnail" />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F. Scott Fitzgerald"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/title_date"
        app:layout_constraintStart_toStartOf="@id/title_date" />



    <TextView
        android:id="@+id/chapters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="9 Chapters"
        android:layout_marginTop="8dp"
        android:layout_marginRight="12dp"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/author"
        app:layout_constraintStart_toStartOf="@id/title_date"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/length"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="5 Hours"
        android:layout_marginTop="12dp"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/chapters"
        app:layout_constraintStart_toStartOf="@id/thumbnail"
        />

    <TextView
        android:id="@+id/language"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="English"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"

        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/length"
        app:layout_constraintStart_toStartOf="@id/length"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
